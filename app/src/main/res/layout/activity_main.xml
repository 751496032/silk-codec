<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tv_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>


    <TextView
        android:id="@+id/tv_play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_pcmToSilk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="pcmToSilk"
        android:padding="10dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_play" />

    <TextView
        android:id="@+id/tv_silkToMp3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="silkToMp3"
        android:padding="10dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_pcmToSilk"/>


    <TextView
        android:id="@+id/tv_pcmToMp3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="pcmToMp3"
        android:padding="10dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_silkToMp3"/>



    <TextView
        android:id="@+id/tv_amrToPcm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="amrToPcm"
        android:padding="10dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_pcmToMp3"/>


    <TextView
        android:id="@+id/tv_amrToSilk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="amrToSilk"
        android:padding="10dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_amrToPcm"/>


    <TextView
        android:id="@+id/tv_silkToPcm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="silkToPcm"
        android:padding="10dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_amrToSilk"/>


    <TextView
        android:id="@+id/tv_convert_mp3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="是否转成mp3播放"
        android:padding="10dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_silkToPcm"/>



</androidx.constraintlayout.widget.ConstraintLayout>